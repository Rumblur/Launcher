<Window x:Class="Rumblur_Launcher.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rumblur_Launcher.UI"
        mc:Ignorable="d"
        Title="Rumblur Launcher" Height="329.217" Width="876.535"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid Background="#FF404040">
        <TextBlock 
            TextWrapping="Wrap" 
            Text="Введите никнейм" 
            Foreground="White" 
            FontSize="22" 
            Margin="54,107,627,162" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" Width="188"/>
        <TextBox 
            x:Name="tbEmail"
            Width="402" 
            Height="35" 
            TextWrapping="Wrap" 
            FontSize="20"
            Text="Nick" 
            Margin="264,105,203,158" 
            Tag="nickname" 
            VerticalContentAlignment="Center"/>
        <Button 
            x:Name="btnLogin" 
            Content="Log in" 
            Background="White" 
            FontSize="16" 
            Height="30"
            Margin="702,109,42,159"/>
    </Grid>
</Window>
